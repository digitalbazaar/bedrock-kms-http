{
  "name": "bedrock-kms-http-test",
  "version": "0.0.1-0",
  "description": "Bedrock KMS HTTP API test",
  "private": true,
  "scripts": {
    "test": "node --preserve-symlinks test.js test",
    "test:debug": "node --preserve-symlinks test.js test --log-level debug",
    "test-node": "node --preserve-symlinks test.js test --framework mocha",
    "test-karma": "node --preserve-symlinks test.js test --framework karma",
    "coverage": "cross-env NODE_ENV=test c8 --reporter=lcov --reporter=text-summary node --preserve-symlinks test.js test --config ./node_modules/@bedrock/karma/lib/coverageConfig.js",
    "coverage-ci": "cross-env NODE_ENV=test c8 --reporter=lcovonly node --preserve-symlinks test.js test --framework mocha",
    "coverage-report": "c8 report"
  },
  "dependencies": {
    "@bedrock/app-identity": "^2.0.0",
    "@bedrock/core": "^5.0.0",
    "@bedrock/did-context": "^3.0.0",
    "@bedrock/did-io": "^7.0.0",
    "@bedrock/express": "^7.0.0",
    "@bedrock/https-agent": "^3.0.0",
    "@bedrock/jsonld-document-loader": "^2.0.0",
    "@bedrock/karma": "^3.0.0",
    "@bedrock/kms": "^9.0.0",
    "@bedrock/kms-http": "file:..",
    "@bedrock/ledger-context": "^22.0.0",
    "@bedrock/meter": "^2.0.0",
    "@bedrock/meter-http": "^7.0.0",
    "@bedrock/meter-usage-reporter": "^6.0.0",
    "@bedrock/mongodb": "^9.0.0",
    "@bedrock/package-manager": "^2.0.0",
    "@bedrock/security-context": "^6.0.0",
    "@bedrock/server": "^4.0.0",
    "@bedrock/ssm-mongodb": "^8.0.0",
    "@bedrock/test": "^7.0.0",
    "@bedrock/validation": "^6.0.0",
    "@bedrock/veres-one-context": "^13.0.0",
    "@bedrock/zcap-storage": "^6.0.0",
    "@digitalbazaar/did-method-key": "^2.0.0",
    "@digitalbazaar/ed25519-signature-2020": "^3.0.0",
    "@digitalbazaar/ezcap": "^2.0.0",
    "@digitalbazaar/http-client": "^2.0.1",
    "@digitalbazaar/http-signature-zcap-invoke": "^5.0.1",
    "@digitalbazaar/webkms-client": "^10.0.0",
    "@digitalbazaar/zcap": "^7.0.0",
    "base58-universal": "^1.0.0",
    "c8": "^7.11.0",
    "cross-env": "^7.0.3",
    "jsonld-signatures": "^9.3.0",
    "p-map": "^5.3.0",
    "sinon": "^9.0.2",
    "uuid-random": "^1.3.2"
  },
  "c8": {
    "excludeNodeModules": false,
    "include": [
      "node_modules/@bedrock/kms-http/**"
    ],
    "exclude": [
      "node_modules/@bedrock/kms-http/node_modules/**"
    ]
  }
}
